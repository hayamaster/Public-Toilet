<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.naver.maps.map.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/dummy_mapviewfragment" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/search_bar"
        android:padding="8dp"
        app:iconifiedByDefault="false"
        app:queryHint="검색어를 입력하세요" />


    <LinearLayout
        android:id="@+id/toilet_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/purple_200"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/search_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_margin="10dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/toilet_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="화장실 명: "
                    android:textSize="16dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/toilet_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="주소: "
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/toilet_counts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="총 변기 개수: "
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/toilet_available"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="이용가능 변기 수: "
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/toilet_break"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="고장난 변기 수: "
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/baby_diaper_switchboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="아기 귀저기 교환대: "
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>
            <Button
                android:id="@+id/map_info_button"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:text="길찾기"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/x"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="23dp"
        android:backgroundTint="@color/button"
        app:rippleColor="@color/white"
        app:srcCompat="@drawable/ok"
        android:visibility="invisible"
        app:borderWidth="0dp"
        app:maxImageSize="52dp"
        app:fabCustomSize="67dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_btn"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="23dp"
        android:backgroundTint="@color/button"
        app:rippleColor="@color/white"
        app:srcCompat="@drawable/x"
        android:visibility="invisible"
        app:borderWidth="0dp"
        app:maxImageSize="52dp"
        app:fabCustomSize="67dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/button"
        android:onClick="ClickBtn"
        app:rippleColor="@color/white"
        app:srcCompat="@drawable/plus"
        app:borderWidth="0dp"
        app:maxImageSize="50dp"
        app:fabCustomSize="70dp"
        tools:ignore="SpeakableTextPresentCheck"/>

</RelativeLayout>